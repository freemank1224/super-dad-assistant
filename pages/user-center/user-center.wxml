<!-- pages/user-center/user-center.wxml -->
<view class="container user-center-container">
  <!-- 用户信息区域 -->
  <view class="user-info-section">
    <view class="user-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="user-name">
      <open-data type="userNickName"></open-data>
    </view>
  </view>
  
  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-group">
      <view class="menu-item" bindtap="goToHistory">
        <image src="../../images/history.png" class="menu-icon"></image>
        <text class="menu-text">对话历史</text>
        <image src="../../images/arrow-right.png" class="arrow-icon"></image>
      </view>
      
      <view class="menu-item" bindtap="goToFavorites">
        <image src="../../images/star-filled.png" class="menu-icon"></image>
        <text class="menu-text">收藏问题</text>
        <image src="../../images/arrow-right.png" class="arrow-icon"></image>
      </view>
    </view>
    
    <view class="menu-group">
      <view class="menu-item" bindtap="goToSettings">
        <image src="../../images/settings.png" class="menu-icon"></image>
        <text class="menu-text">设置</text>
        <image src="../../images/arrow-right.png" class="arrow-icon"></image>
      </view>
      
      <view class="menu-item" bindtap="goToFeedback">
        <image src="../../images/feedback.png" class="menu-icon"></image>
        <text class="menu-text">意见反馈</text>
        <image src="../../images/arrow-right.png" class="arrow-icon"></image>
      </view>
      
      <view class="menu-item" bindtap="goToAbout">
        <image src="../../images/about.png" class="menu-icon"></image>
        <text class="menu-text">关于我们</text>
        <image src="../../images/arrow-right.png" class="arrow-icon"></image>
      </view>
    </view>
  </view>
  
  <!-- 版本信息 -->
  <view class="version-info">
    <text>超级奶爸助手 v1.0.0</text>
  </view>
</view>