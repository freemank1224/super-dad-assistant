/* pages/photo-mode/photo-mode.wxss */

.photo-mode-container {
  padding: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

/* 相机区域 */
.camera-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.camera-container {
  width: 100%;
  height: 800rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  background-color: #000;
}

.camera {
  width: 100%;
  height: 100%;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.camera-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 0 40rpx;
  margin-bottom: 30rpx;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.control-btn image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.control-btn text {
  font-size: 24rpx;
  color: #666;
}

.take-photo {
  transform: scale(1.2);
}

.tips {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
}

/* 文字识别结果区域 */
.text-result-section {
  width: 100%;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.text-content {
  width: 100%;
  margin-bottom: 30rpx;
}

.text-content textarea {
  width: 100%;
  min-height: 300rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 语音输入区域 */
.voice-input-section {
  margin-bottom: 40rpx;
}

.voice-input-container {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
}

.voice-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
  justify-content: center;
}

.voice-btn image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.voice-btn text {
  font-size: 24rpx;
  color: #666;
}

.voice-text {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.action-buttons .btn {
  width: 45%;
}

/* 问题列表区域 */
.questions-section {
  width: 100%;
}

.questions-list {
  margin-bottom: 40rpx;
}

.question-item {
  margin-bottom: 20rpx;
  position: relative;
}

.question-number {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.question-content {
  font-size: 30rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.question-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  padding: 10rpx;
  margin-left: 20rpx;
}

.action-btn image {
  width: 40rpx;
  height: 40rpx;
}