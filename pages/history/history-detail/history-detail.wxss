.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  z-index: 100;
  border-bottom: 1rpx solid #eee;
}

.back-btn {
  padding: 20rpx;
  margin-left: -20rpx;
}

.icon-back {
  font-family: "iconfont";
  font-size: 36rpx;
  color: #333;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 56rpx;
}

.content {
  margin-top: 108rpx;
  padding: 30rpx;
}

.record-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.record-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.record-type {
  margin-bottom: 30rpx;
}

.type-label {
  font-size: 28rpx;
  color: #666;
}

.type-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.record-content {
  border-top: 1rpx solid #eee;
  padding-top: 30rpx;
}

.photo-section {
  margin-bottom: 30rpx;
}

.record-image {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.image-text {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
}

.text-label {
  font-size: 26rpx;
  color: #666;
}

.text-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

.topic-section {
  margin-bottom: 30rpx;
}

.topic-label {
  font-size: 28rpx;
  color: #666;
}

.topic-content {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.qa-section {
  border-top: 1rpx solid #eee;
  padding-top: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.qa-list {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
}

.qa-item {
  margin-bottom: 20rpx;
}

.qa-item:last-child {
  margin-bottom: 0;
}

.question, .answer {
  display: flex;
  margin-bottom: 10rpx;
}

.q-label, .a-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
  flex-shrink: 0;
}

.q-content, .a-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  flex: 1;
}

.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
  font-size: 28rpx;
} 