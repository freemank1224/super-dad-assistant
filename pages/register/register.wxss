/* pages/register/register.wxss */

.register-container {
  padding-top: 40rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.register-form {
  width: 100%;
}

.register-btn {
  margin-top: 40rpx;
  width: 100%;
}

.agreement {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin: 30rpx 0;
}

.agreement .link {
  color: #3E7BFA;
  margin: 0 4rpx;
}

.login-link {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin-top: 30rpx;
}

.login-link navigator {
  color: #3E7BFA;
}